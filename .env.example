# Tradovate/NinjaTrader Credentials
# Use your NinjaTrader login - works for both platforms
TRADOVATE_USERNAME=your_email@example.com
TRADOVATE_PASSWORD=your_password

# Set to "true" for paper trading, "false" for live
TRADOVATE_DEMO=true

# CrossTrade API (optional - 7-day free trial available)
CROSSTRADE_API_KEY=

# Data paths
NT_DATA_EXPORT_PATH=/path/to/ninjatrader/exports
HISTORICAL_DATA_PATH=./data/historical

# ML Configuration
MODEL_SAVE_PATH=./models
RANDOM_SEED=42

# Trading Settings
INITIAL_CAPITAL=1000
RISK_PER_TRADE=0.02
MAX_CONTRACTS=5
COMMISSION_PER_CONTRACT=2.50
SLIPPAGE_TICKS=1

# Symbol (MES front-month contract)
TRADING_SYMBOL=MESZ4
